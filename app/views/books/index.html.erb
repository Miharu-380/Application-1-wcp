<h1>Books</h1>
<% @books.each do |book| %>
  <span><%= book.title %></span>
  <span><%= book.body %></span>
<% end %>


<h2>New Book</h2>

<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body %>
</div>
<div class="botton">
  <%= f.submit '  Create Book  ' %>
</div>
<% end %>
